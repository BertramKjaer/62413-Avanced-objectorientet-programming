<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuizProgram</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuizProgram.styles.css" asp-append-version="true" />
</head>


<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">QuizProgram</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-5">

        @RenderBody()

        <div class="row text-center mb-4">
            @for (int i = 1; i <= 5; i++)
            {
                <div class="col">
                    <a href="#" class="icon-link">
                        <i class="fas fa-icons fa-3x"></i>
                        @if (i == 1)
                        {
                            <p>Create new quiz</p>
                        }
                        @if (i == 2)
                        {
                            <p>Host existing quiz</p>
                        }
                        @if (i == 3)
                        {
                            <p>Review old quizzes</p>
                        }
                        @if (i == 4)
                        {
                            <p>View Grade Distribution</p>
                        }
                        @if (i == 5)
                        {
                            <p>Bigmag solos</p>
                        }
                    </a>
                </div>
            }
        </div>
        <div class="row text-center mb-4">
            @for (int i = 6; i <= 10; i++)
            {
                <div class="col">
                    <a href="#" class="icon-link">
                        <i class="fas fa-icons fa-3x"></i>
                        <p>Icon Text @i</p>
                    </a>
                </div>
            }
        </div>


    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - QuizProgram - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
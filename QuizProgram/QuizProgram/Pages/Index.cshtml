@page
@model IndexModel

@{
    Layout = "./Shared/Layouts/_LoginLayout.cshtml";
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-6 col-md-4">
                <div class="form-group">
                    <label for="DTU_mail">DTU mail</label>
                    <input type="text" id="DTU_mail" name="DTU_mail" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="DTU_password">DTU Password</label>
                    <input type="password" id="DTU_password" name="DTU_password" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary" onclick="redirectToHomePage()">Login</button>
                
                <button type="button" class="btn btn-secondary" onclick="redirectToCreateUserPage()">Create user</button>
     
        </div>
    </div>
</div>
    
<script>

    function redirectToHomePage() {
        if (@Model.GetAccess()) {
            window.location.href = "/home";
        }
    }
</script>

<script>

    function redirectToCreateUserPage() {
    window.location.href = "/createUser"; 
}
</script>
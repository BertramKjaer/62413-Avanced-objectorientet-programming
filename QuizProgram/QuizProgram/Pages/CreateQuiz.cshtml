@page
@model QuizProgram.Pages.CreateQuizModel

<h2>Create New Quiz</h2>

<form method="post">
    <div class="form-group quiz-name">
        <label asp-for="NewQuiz.Title">Quiz Name</label>
        <input asp-for="NewQuiz.Title" class="form-control" />
    </div>

    <div class="quiz-section">
        @for (int i = 0; i < Model.Questions.Count; i++)
        {
            <div class="question-block">
                <div class="form-group">
                    <label asp-for="Questions[i].QuizQuestion">Question @(i + 1)</label>
                    <input asp-for="Questions[i].QuizQuestion" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Questions[i].CorrectAnswer">Correct Answer</label>
                    <input asp-for="Questions[i].CorrectAnswer" class="form-control" />
                </div>

                @for (int j = 0; j < Model.Questions[i].IncorrectAnswers.Count; j++)
                {
                    <div class="form-group">
                        <label asp-for="@Model.Questions[i].IncorrectAnswers[j]">Incorrect Answer @(j + 1)</label>
                        <input asp-for="@Model.Questions[i].IncorrectAnswers[j]" class="form-control" />
                    </div>
                }
            </div>
        }
    </div>

    <button type="button" id="addQuestion" class="btn btn-default">Add Another Question</button>
    <button type="button" id="removeLastQuestion" class="btn btn-danger">Remove Last Question</button>
    <button type="submit" class="btn btn-primary">Create Quiz</button>
</form>

<style>
    .quiz-section {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
    }

    .form-group.quiz-name {
        max-width: 600px; /* Adjust this as needed */
        margin: 0 auto 20px auto; /* Center the quiz name input and add some bottom margin */
    }

    .question-block {
        background: #f3f3f3;
        padding: 15px;
        border-radius: 8px;
    }

    .form-group {
        margin-bottom: 10px;
    }

        .form-group label {
            display: block;
        }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn-default {
        background-color: #e7e7e7;
        color: black;
        margin-right: 8px;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn {
        padding: 8px 16px;
        border: none;
        cursor: pointer;
        border-radius: 4px;
    }

    .btn:hover {
        opacity: 0.8;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

</style>

@section Scripts {
    <script>
        // JavaScript for adding a new question dynamically
        document.getElementById('addQuestion').addEventListener('click', function () {
            // Count the current number of questions
            var questionCount = document.querySelectorAll('.question-block').length;

            // Create a new question block with the appropriate index
            var newQuestionBlock = `
                <div class="question-block">
                    <div class="form-group">
                        <label>Question ${questionCount + 1}</label>
                        <input name="Questions[${questionCount}].QuizQuestion" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Correct Answer</label>
                        <input name="Questions[${questionCount}].CorrectAnswer" class="form-control" />
                    </div>`;

            // Add incorrect answers
            for (var i = 0; i < 3; i++) {
                newQuestionBlock += `
                    <div class="form-group">
                        <label>Incorrect Answer ${i + 1}</label>
                        <input name="Questions[${questionCount}].IncorrectAnswers[${i}]" class="form-control" />
                    </div>`;
            }

            newQuestionBlock += `</div>`;

            // Append the new question block to the quiz section
            document.querySelector('.quiz-section').insertAdjacentHTML('beforeend', newQuestionBlock);
        });

        document.getElementById('removeLastQuestion').addEventListener('click', function () {
            var questionBlocks = document.querySelectorAll('.question-block');
            if (questionBlocks.length > 1) { // ensure at least one question remains
                questionBlocks[questionBlocks.length - 1].remove();
            }
        });
    </script>
}

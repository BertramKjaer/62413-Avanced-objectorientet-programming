@page
@model HomeModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Home Page</h1>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">

<div class="row text-center mb-4">
    @for (int i = 1; i <= 2; i++)
    {
        <div class="col">
            <a asp-page="@GetPageLink(i)" class="icon-link">
                <i class="@(i == 1 ? "fas fa-plus-circle fa-5x" : "fas fa-list-alt fa-5x")"></i>
                <p>
                    @(i switch
                    {
                        1 => "Create new quiz",
                        2 => "View Quizzes",
                        _ => ""
                    })
                </p>
            </a>
        </div>
    }
</div>

<style>
    .row {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 50vh; /* Reduced from 100vh to 70vh to move up the icons */
        padding-top: 5vh; /* Additional top padding to adjust vertical position */
    }

    .col {
        flex: 1; /* Distribute space equally */
        display: flex;
        justify-content: center; /* Center horizontally in the column */
        align-items: center; /* Center vertically in the column */
    }

    .icon-link {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 300px; /* Set width for the icon */
        height: 300px; /* Adjusted height to make it a bit smaller */
        color: black;
        text-decoration: none;
        border-radius: 50%; /* Ensures the link is perfectly circular */
        background: #f8f9fa;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2); /* Adds depth */
        transition: transform 0.3s, color 0.3s;
    }

        .icon-link:hover {
            color: #007bff;
            transform: translateY(-5px); /* Subtle lift effect */
            text-decoration: none;
        }

        .icon-link i {
            font-size: 60px; /* Larger font size for the icon */
        }

        .icon-link p {
            margin-top: 10px; /* Space between icon and text */
            font-size: 1.5em; /* Larger text size */
            font-weight: bold;
        }
</style>



@functions {
    private string GetPageLink(int index)
    {
        return index switch
        {
            1 => "/CreateQuiz",
            2 => "/ViewQuiz",
            _ => ""
        };
    }
}


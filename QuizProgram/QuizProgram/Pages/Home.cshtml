@page
@model HomeModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Home Page</h1>
    <p>Example of how the front page could look for a proffessor entering the site</p>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">

<div class="row text-center mb-4">
    @for (int i = 1; i <= 5; i++)
    {
        <div class="col">
            <a href="#" class="icon-link">
                <i class="fas fa-icons fa-3x"></i>
                @if (i == 1)
                {
                    <p>Create new quiz</p>
                }
                @if (i == 2)
                {
                    <p>Host existing quiz</p>
                }
                @if (i == 3)
                {
                    <p>Review old quizzes</p>
                }
                @if (i == 4)
                {
                    <p>View Grade Distribution</p>
                }
                @if (i == 5)
                {
                    <p>Edit existing quizzes</p>
                }
            </a>
        </div>
    }
</div>
<div class="row text-center mb-4">
    @for (int i = 6; i <= 10; i++)
    {
        <div class="col">
            <a href="#" class="icon-link">
                <i class="fas fa-icons fa-3x"></i>
                <p>Bigmag solos @i</p>
            </a>
        </div>
    }
</div>


